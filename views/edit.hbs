<nav>
    <a href="/" class="text-danger text-decoration-none">Cars</a>
    <a href="/add" class="text-light text-decoration-none">Add</a>
    <a href="/list" class="text-light text-decoration-none">List</a>
    <a href="/edit" class="text-light text-decoration-none">Edit</a>
</nav>
<form action="" onsubmit="return confirm('Are you sure?');" method="GET">

<table class="table table-dark table-striped table-hover text-center">
    <tr>
        <th scope="col text-secondary">id</th>
        <th scope="col text-secondary">ubezpieczony</th>
        <th scope="col text-secondary">benzyna</th>
        <th scope="col text-secondary">uszkodzony</th>
        <th scope="col text-secondary">napÄ™d 4x4</th>
        <th scope="col text-secondary">Edit</th>
  </tr>
{{#docs}}
   {{#if (eq this._id ../id)}}
                    <tr class="border-bottom">
                        <td>{{_id}}</td>
                        {{#each ../options}}
                            <td class="text-center p-1">
                                <select name={{this}}>
                                    {{#each ../../select}}
                                        <option {{formatSelect (eq this (insideValue ../../this ../this))}} value="{{this}}">{{formatBool this}}</option>
                                    {{/each}}
                                </select>
                            </td>
                        {{/each}}
                        <td class="text-center p-1 px-2">
                            <input type="submit" class="btn btn-danger" value="Update"formaction="/edit/confirm?id={{../id}}">
                            <a class="btn btn-dark" href="/edit">Cancel</a>
                        </td>
                    </tr>
                    {{else}}
                    <tr class="border-bottom">
                        <td>{{_id}}</td>
                        <td class="text-center p-1">{{formatBool ubezpieczony}}</td>
                        <td class="text-center p-1">{{formatBool benzyna}}</td>
                        <td class="text-center p-1">{{formatBool uszkodzony}}</td>
                        <td class="text-center p-1">{{formatBool naped4x4}}</td>
                        <td class="text-center p-1 px-2">
                            <a class="btn btn-dark" href="/edit?id={{_id}}">Edit</a>
                        </td>
                    </tr>
                {{/if}}
{{/docs}}
</table>

</form>